{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es6"
  },
  "include": [
    "../src/**/*",
    "../types/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../babel.config.js",
    "../metro.config.js",
    "../jest.config.js"
  ]
}
